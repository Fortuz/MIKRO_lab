<MainWindow>
    id: mainwindow
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    
            
    FloatLayout: 
        size: 640,480
        Image:
            source: root.image_src
            allow_strech: True
            pos: root.width/2 - self.width/2, root.height - self.height - 5

                  
        SmoothButton:
            id: settings
            text: "S"
            pos: 5, root.height - self.height - 5
            on_press: root.btn_settings()
            
        SmoothButton:
            id: help
            text: "H"
            pos: 5, root.height - (2*self.height) - (2*5)
            on_press: root.btn_help()
            
        SmoothButton:
            id: credits
            text: "C"
            pos: 5, root.height - (3*self.height) - (3*5)
            on_press: root.btn_credits()
            
<SmoothButton>
    background_color: (0,0,0,0)
    background_normal: ''
    color: root.btn_text_color
    size_hint: 0.075, 0.09
    back_color_normal: (0.157, 0.455, 0.753, 0.5)
    back_color_down:   (0.2, 0.5, 0.8, 0.5)
    border_radius: [36]
    canvas.before:
        Color:
            rgba: self.back_color_normal if self.state == "normal" else self.back_color_down
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
            
<SettingsPopup>
    Label:
        text: "Settings Label"
        color: root.text_color
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    SmoothButton:
        text: "Apply"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: root.btn_SettingsApply()
        
<HelpPopup>
    GridLayout:
        cols:1
        size_hint: 0.9, 1
        pos_hint: {"x":0.05, "top":1}
        canvas.before:
            Color:
                rgba: 1, 0, 0, .5
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Help Label"
            color: root.text_color
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":1}
        
        FloatLayout:
            size_hint: 0.6, 0.05
            SmoothButton:
                border_radius: [18,0,18,0]
                text: "Back"
                pos_hint: {"x":0.3, "y":0.1}
                size_hint: 0.4, 1
                on_release: root.btn_HelpBack()
        
<CreditsPopup>
    creditpopup: creditpopup
    id: creditpopup
    GridLayout:
        cols:1
        size_hint: 0.6, 1
        pos_hint: {"x":0.2, "top":1}
        
        Label:
            text: 'This application was made by'
            color: root.text_color
            size_hint: 0.6, 0.2
        
        Label:
            text: 'Natabara Gyongyossy'
            color: root.text_color
            size_hint: 0.6, 0.1
        
        Label:
            text: 'Balazs Nagy'
            color: root.text_color
            size_hint: 0.6, 0.1
        
        Label:
            text: '&'
            color: root.text_color
            size_hint: 0.6, 0.1
            
        Label:
            text: 'Mark Domonkos'
            color: root.text_color
            size_hint: 0.6, 0.1
        
        Label:
            text: 'at the'
            color: root.text_color
            size_hint: 0.6, 0.2
        
        Label:
            text: 'Budapest University of Technology and Economics'
            color: root.text_color
            size_hint: 0.6, 0.1
            
        Image:
            source: 'pics/bme_logo.png'
            size_hint: 1, 0.4
            color: 1, 1, 1, 0.35
            
        FloatLayout:
            size_hint: 0.6, 0.1
            SmoothButton:
                border_radius: [18,0,18,0]
                text: "Back"
                pos_hint: {"x":0.3, "y":0.5}
                size_hint: 0.4, 1
                on_release: root.btn_CreditBack()
                               