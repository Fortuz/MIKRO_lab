<MainWindow>
    id: mainwindow
    canvas.before:
        Color:
            rgba: 1, 1, 1, .2
        Rectangle:
            pos: self.pos
            size: self.size
    
            
    FloatLayout: 
        size: 640,480
        Image:
            source: root.image_src
            pos_hint: {'top': 1}

                  
        SmoothButton:
            id: settings
            text: "Settings"
            pos: 5, root.height - self.height - 5
            on_press: root.btn_settings()
            
        SmoothButton:
            id: help
            text: "Help"
            pos: 5, root.height - (2*self.height) - (2*5)
            on_press: root.btn_help()
            
        SmoothButton:
            id: credits
            text: "Credits"
            pos: 5, root.height - (3*self.height) - (3*5)
            on_press: root.btn_credits()
            
<SmoothButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    color: 0, 1, 0, 1
    size_hint: 0.1, 0.1
    back_color_normal: (0.157, 0.455, 0.753, 1)
    back_color_down:   (0.2, 0.5, 0.8, 1)
    border_radius: [36]
    canvas.before:
        Color:
            rgba: self.back_color_normal if self.state == "normal" else self.back_color_down
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
            
