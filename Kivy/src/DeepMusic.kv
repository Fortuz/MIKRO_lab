<SmoothButton>
    background_color: (0,0,0,0)
    background_normal: ''
    color: root.btn_text_color
    size_hint: 0.075, 0.09
    back_color_normal: (0.157, 0.455, 0.753, 0.5)
    back_color_down:   (0.157, 0.455, 0.753, 0.2)
    border_radius: [36]
    canvas.before:
        Color:
            rgba: self.back_color_normal if self.state == "normal" else self.back_color_down
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<MainWindow>
    id: mainwindow
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout: 
        size: root.size
          
        Image:
            source: root.image_src
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
            size_hint: 0.9, 0.9
            pos: root.width/2 - self.width/2, root.height - self.height - 5
            
        SmoothButton:
            id: settings
            size: 40, 40
            size_hint: None, None
            pos: 5, root.height - self.height - 5
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            on_release: root.btn_settings()
            Image:
                source: 'pics/kivy_logo_settings2.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
        SmoothButton:
            id: help
            size: 40, 40
            size_hint: None, None
            pos: 5, root.height - (2*self.height) - (2*5)
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            on_release: root.btn_help()
            Image:
                source: 'pics/kivy_logo_help.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
        SmoothButton:
            id: credits
            size: 40, 40
            size_hint: None, None
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            pos: 5, root.height - (3*self.height) - (3*5)
            on_release: root.btn_credits()
            Image:
                source: 'pics/kivy_logo_credits.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
<SettingsPopup>
    title: "Settings"
    size_hint: None, None 
    size: 500, 400
    title_color: self.text_color
    
    GridLayout:
        cols:1
        rows:2
        size_hint: 0.9, 1
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        
        GridLayout:
            cols: 2
            rows: 6 
            size_hint: 1, 2.2
            
            Label:
                text: "Prediction feedback enable"
                color: root.text_color
                
            CheckBox:
                color: root.cb_color
                on_active: root.checkbox_Predict(self, self.active) 
            
            Label:
                text: "Tune help enable"
                color: root.text_color
                
            CheckBox:
                color: root.cb_color
                on_active: root.checkbox_Tune(self, self.active) 
                
            Label:
                text: "Rythm help enable"
                color: root.text_color
                
            CheckBox:
                color: root.cb_color
                on_active: root.checkbox_Rythm(self, self.active) 
                
            Label:
                text: "Volume"
                color: root.text_color
                
            Slider: 
                orientation: "horizontal"
                min: 0
                max: 100
                value: 50
                on_value: root.slider_Volume(self, int(self.value))
    
            Label:
                text: "Instrument"
                color: root.text_color
                
            AnchorLayout:
                anchor_x: 'center'
                Spinner:
                    size_hint: 0.5, 0.9
                    text: "Violin"
                    values: ["Violin", "Flute"]
                    on_text: root.spinner_Instrument(self.text)
                
            Label:
                text: "Language"
                color: root.text_color
                                    
            AnchorLayout:
                anchor_x: 'center'
                Spinner:
                    size_hint: 0.5, 0.9
                    text: 'English'
                    values: 'English', 'Magyar'
                    on_text: root.spinner_Language(self.text)
                
        FloatLayout:
            size_hint: 0.5, 0.5
            SmoothButton:
                text: "Apply"
                size_hint: 0.3, 0.5
                border_radius: [18,0,18,0]
                pos_hint: {"center_x":0.5, "center_y":0.5}
                on_release: root.btn_SettingsApply()
        
<HelpPopup>
    title: "Help"
    title_color: self.text_color
    size_hint: None, None
    size: 750, 420
    
    FloatLayout:
        id: parent
        size_hint: 0.9, 1
        pos_hint: {"x":0.05, "top":1}
        
        Image:
            source: 'pics/Help_white_noLabel.png'
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
