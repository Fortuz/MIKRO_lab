<SmoothButton>
    background_color: (0,0,0,0)
    background_normal: ''
    color: root.btn_text_color
    size_hint: 0.075, 0.09
    back_color_normal: (0.157, 0.455, 0.753, 0.5)
    back_color_down:   (0.157, 0.455, 0.753, 0.2)
    border_radius: [36]
    canvas.before:
        Color:
            rgba: self.back_color_normal if self.state == "normal" else self.back_color_down
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<SliderWidget>
    Slider: 
        orientation: "horizontal"
        min: 0
        max: 100
        value: 30
        on_value:label2.text = str(int(self.value)) 
          
    Label: 
        id: label2 
        font_size: "30sp"
        text: "30"
        color: 0, 0, 1, 1

<MainWindow>
    id: mainwindow
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    
    FloatLayout: 
        size: root.size
          
        Image:
            source: root.image_src
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
            size_hint: 0.9, 0.9
            pos: root.width/2 - self.width/2, root.height - self.height - 5

        SmoothButton:
            id: settings
            size: 40, 40
            size_hint: None, None
            pos: 5, root.height - self.height - 5
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            on_release: root.btn_settings()
            Image:
                source: 'pics/kivy_logo_settings2.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
        SmoothButton:
            id: help
            size: 40, 40
            size_hint: None, None
            pos: 5, root.height - (2*self.height) - (2*5)
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            on_release: root.btn_help()
            Image:
                source: 'pics/kivy_logo_help.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
        SmoothButton:
            id: credits
            size: 40, 40
            size_hint: None, None
            back_color_normal: (0.753, 0.753, 0.753, 0.5)
            back_color_down: (0.753, 0.753, 0.753, 0.2)
            pos: 5, root.height - (3*self.height) - (3*5)
            on_release: root.btn_credits()
            Image:
                source: 'pics/kivy_logo_credits.png'
                color: 1,1,1,0.7
                y: self.parent.y
                x: self.parent.x
                size: 40, 40
            
<SettingsPopup>
    GridLayout:
        cols:1
        rows:2
        size_hint: 0.9, 1
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        
        GridLayout:
            cols: 2
            rows: 6 
            size_hint: 1, 2.2
            
            Label:
                text: "Prediction feedback enable"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                size_hint: 0.5, 0.1
                
            CheckBox:
                color:.294, .761, .623
                on_active: root.checkbox_Predict(self, self.active) 
                pos_hint: {"x":0.2, "top":0.5}
                size_hint: 1, 1
            
            Label:
                text: "Tune help enable"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                
            CheckBox:
                color:.294, .761, .623
                on_active: root.checkbox_Tune(self, self.active) 
                pos_hint: {"x":0.2, "top":0.5}
                
            Label:
                text: "Rythm help enable"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                
            CheckBox:
                color:.294, .761, .623
                on_active: root.checkbox_Rythm(self, self.active) 
                pos_hint: {"x":0.2, "top":0.5}
                
            Label:
                text: "Volume"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                
            Slider: 
                orientation: "horizontal"
                min: 0
                max: 100
                value: 50
                on_value: root.slider_Volume(self, int(self.value))
    
            Label:
                text: "Instrument"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                
            Spinner:
                text: 'Violin'
                values: 'Violin', 'Flute'
                on_value:
                    print: "The spinner {} has text {}".format(self, self.value)
                
            Label:
                text: "Language"
                color: root.text_color
                pos_hint: {"x":0.2, "top":1}
                                    
            CheckBox:
                color:.294, .761, .623 
                pos_hint: {"x":0.2, "top":0.5}
                
        FloatLayout:
            SmoothButton:
                text: "Apply"
                size_hint: 0.3, 0.3
                border_radius: [18,0,18,0]
                pos_hint: {"center_x":0.5, "center_y":0.25}
                on_release: root.btn_SettingsApply()
        
