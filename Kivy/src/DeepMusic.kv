            Label:
                text: 'ti'
            Label:
                text: 'la'
            Label:
                text: 'so'
            Label:
                text: 'fa'
            Label:
                text: 'mi'
            Label:
                text: 're'
            Label:
                text: 'do'
        
        GridLayout:
            cols: 1
            rows: 2
            pos_hint: {'center_y': 0.55, 'center_x': 0.05}   
            size_hint_y: 0.25
            
            Label:
